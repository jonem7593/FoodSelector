<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#222222">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘의 음식은~~!"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_margin="15dp"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton_kor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한식"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/radioButton_cen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중식"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/radioButton_amr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양식"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/radioButton_jpn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일식"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </RadioGroup>

    <Button
        android:id="@+id/button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="저를 누르면 나와요!"
        android:textColor="@color/white"
        android:backgroundTint="#0E0E0E"
        android:textSize="20sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textView_this"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="이거어때!!!"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="40"
        android:gravity="center"
        android:scaleType="fitXY"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView_sans"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:textColor="#A2FF88"
        android:textSize="50sp"
        android:gravity="center"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botton_cl"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="초기화버튼!"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#0E0E0E"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/botton_end"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="종료버튼!"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#0E0E0E"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

</LinearLayout>